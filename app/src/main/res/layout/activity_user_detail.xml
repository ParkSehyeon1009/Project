<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetailActivity">

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/userDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 정보"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이름 -->
    <TextView
        android:id="@+id/usernameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/userDetailTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/usernameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홍길동"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/usernameLabel"
        app:layout_constraintStart_toEndOf="@id/usernameLabel"
        android:layout_marginStart="8dp" />

    <!-- 이메일 -->
    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/usernameLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/emailValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@example.com"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/emailLabel"
        app:layout_constraintStart_toEndOf="@id/emailLabel"
        android:layout_marginStart="8dp" />

    <!-- 학번 -->
    <TextView
        android:id="@+id/studentNumLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학번:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/emailLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/studentNumValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345678"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/studentNumLabel"
        app:layout_constraintStart_toEndOf="@id/studentNumLabel"
        android:layout_marginStart="8dp" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 채팅내역 버튼 -->
        <Button
            android:id="@+id/ChatList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="채팅내역"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <!-- 거래내역 버튼 -->
        <Button
            android:id="@+id/TradeList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="거래내역"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <!-- 홈 버튼 -->
        <Button
            android:id="@+id/HomeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="홈"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <!-- 게시글 목록 버튼 -->
        <Button
            android:id="@+id/PostListButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="게시글 목록"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <!-- 내정보 버튼 -->
        <Button
            android:id="@+id/MyInfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="내정보"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
